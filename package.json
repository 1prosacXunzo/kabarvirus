{
  "name": "kabarvirus",
  "version": "1.0.0",
  "description": "KabarVirus.com",
  "main": "server.js",
  "scripts": {
    "start": "npm run grab-data && node server.js",
    "grab-data": "npm run grab-national && npm run grab-provinces",
    "grab-national": "curl -L -s tinyurl.com/ydaox67y | jq -f src/national.jq > national.json",
    "grab-provinces": "curl -L -s tinyurl.com/y8gbyh26 | jq -f src/provinces.jq > provinces.json",
    "generate": "node generate.js",
    "test": "npm run validate && npm run check-format",
    "validate": "html-validate \"public/**/*.html\"",
    "check-format": "prettier --check \"**/*.js\"",
    "format-code": "prettier --write \"**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ariya/kabarvirus.git"
  },
  "author": "Ariya Hidayat",
  "license": "MIT",
  "devDependencies": {
    "chokidar": "^3.3.1",
    "clean-css": "^4.2.3",
    "html-validate": "^2.20.0",
    "live-server": "^1.2.1",
    "mustache": "^4.0.1",
    "prettier": "^2.0.2",
    "uglify-js": "^3.8.1"
  },
  "prettier": {
    "tabWidth": 4,
    "printWidth": 120,
    "singleQuote": true,
    "quoteProps": "consistent",
    "trailingComma": "none"
  }
}
